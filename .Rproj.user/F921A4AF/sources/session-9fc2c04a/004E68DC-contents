#ESTRUTURA CONDICIONAL SWITCH





  x = 18
  
  if(x < 11){
    print(x)
  }else if (x < 17){
    print(x*x)
  }else{
    print(x*x*x)
  }
  
  #outra forma de if composto
  x <- 30
  res <- if (x == 30) "igual" else "diferente"
  res
  
  #estrutura condicional ifelse
  x = 5
  ifelse(x < 2, "a", "b")
  
  #estruturas condicionais (switch)
  x = 4
  switch (x, 1, 2, 3, "b")
  
  x = 4
  valor = switch (x, 1, 2, 3, "b")
  print(valor)




  
  
  
  
